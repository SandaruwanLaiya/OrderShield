
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link rel="stylesheet" href="~/Content/css/LoginLayout.css">
<div class="login-container">
    <h2>Login</h2>
    <form id="loginForm">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <button type="submit">Login</button>
        @Html.ActionLink("Do you want to register?", "Register", "Administrator", null)
    </form>
</div>
<script type="text/javascript" src="~/Content/js/LoginLayout.js"></script>
